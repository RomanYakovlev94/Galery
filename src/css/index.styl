body,
html {
    font: 16px/1.4 Georgia, serif;
}
.page {
    min-width: 1000px;
    padding: 2.5rem 2rem;
    //display: inline-block;
}
.title{
    font-size: 3rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    text-align: center;
    margin-bottom: 0.4em;
}

.gallery {
    &Item{
        display: inline-block;
        width: 25%;
        padding-bottom: 29%;
        height: 0;
        position: relative;
        vertical-align: top;
        // width: 150px;
        // height: 150px;
    }    
}

.card{
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: block;

    &Content,
    &Hover,
    &Image{
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }    
    &Image{
        object-fit: cover; 
        z-index: 1;   
    }
    &Hover{
        z-index: 2;
    }
    &Content{
        z-index: 3;    
    }
}